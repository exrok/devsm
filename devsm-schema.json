{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "x-tombi-toml-version": "v1.1.0",
    "title": "DevSM Configuration",
    "type": "object",
    "properties": {
        "action": {
            "description": "Jobs expected to terminate (e.g., build scripts, linters).",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/job"
            }
        },
        "service": {
            "description": "Never-ending jobs (e.g., database, web server).",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/job"
            }
        },
        "group": {
            "description": "Groupings of multiple jobs or references.",
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "$ref": "#/$defs/runnable"
                }
            }
        }
    },
    "additionalProperties": false,
    "$defs": {
        "job": {
            "type": "object",
            "description": "A job definition (Action or Service).",
            "properties": {
                "pwd": {
                    "description": "Directory the job should be executed from. Defaults to workspace root.",
                    "$ref": "#/$defs/string_expr"
                },
                "profiles": {
                    "description": "List of active profiles for this job.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "cmd": {
                    "description": "Path to executable followed by list of arguments.",
                    "$ref": "#/$defs/string_list_expr"
                },
                "sh": {
                    "description": "A shell script to run.",
                    "$ref": "#/$defs/string_expr"
                }
            },
            "oneOf": [
                {
                    "required": [ "cmd" ],
                    "title": "Command Execution"
                },
                {
                    "required": [ "sh" ],
                    "title": "Shell Script"
                }
            ]
        },
        "string_expr": {
            "description": "A string, a variable reference, or a conditional expression.",
            "oneOf": [
                {
                    "type": "string",
                    "title": "Literal"
                },
                {
                    "type": "object",
                    "title": "Variable",
                    "required": [ "var" ],
                    "properties": {
                        "var": {
                            "type": "string",
                            "description": "Name of the variable to interpolate."
                        }
                    },
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "title": "Conditional",
                    "required": [ "if", "then" ],
                    "properties": {
                        "if": {
                            "$ref": "#/$defs/predicate"
                        },
                        "then": {
                            "$ref": "#/$defs/string_expr"
                        },
                        "or_else": {
                            "$ref": "#/$defs/string_expr"
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },
        "string_list_expr": {
            "description": "A list of string expressions (flattened) or a single expression.",
            "oneOf": [
                {
                    "$ref": "#/$defs/string_expr"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/string_list_expr"
                    }
                }
            ]
        },
        "predicate": {
            "type": "object",
            "properties": {
                "profile": {
                    "type": "string",
                    "description": "Matches if the active profile equals this string."
                }
            },
            "required": [ "profile" ],
            "additionalProperties": false
        },
        "runnable": {
            "description": "A reference to a job, an inline job, or a job with arguments.",
            "oneOf": [
                {
                    "description": "Reference to another job (e.g. 'ls:verbose').",
                    "type": "string"
                },
                {
                    "description": "Inline job definition.",
                    "$ref": "#/$defs/job"
                },
                {
                    "description": "Tuple: [Job/Ref, Variables].",
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": [
                        {
                            "oneOf": [
                                { "type": "string" },
                                { "$ref": "#/$defs/job" }
                            ]
                        },
                        {
                            "type": "object",
                            "description": "Variables passed to the job context."
                        }
                    ]
                }
            ]
        }
    }
}